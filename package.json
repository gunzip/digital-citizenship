{
  "name": "digital-citizenship",
  "version": "0.1.0",
  "description": "Digital Citizenship platform",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:teamdigitale/digital-citizenship.git"
  },
  "author": "Team per la Trasformazione Digitale, AgID",
  "license": "MIT",
  "scripts": {
    "lint": "tslint -p . -c tslint.json",
    "docs:build": "sphinx-build docs site",
    "docs:nojekyll": "cp .nojekyll site",
    "docs:api": "cp -r docs/api site",
    "docs:deploy": "gh-pages -t -d site",
    "docs:publish": "npm-run-all docs:build docs:nojekyll docs:api docs:deploy",
    "resources:tf-init":
      "cross-var terraform init -var-file=infrastructure/env/$ENVIRONMENT/tfvars.json -backend-config=\"infrastructure/env/$ENVIRONMENT/backend.tf\" infrastructure",
    "resources:tf-plan":
      "cross-var terraform plan -var-file=infrastructure/env/$ENVIRONMENT/tfvars.json infrastructure",
    "resources:tf-apply":
      "cross-var terraform apply -var-file=infrastructure/env/$ENVIRONMENT/tfvars.json infrastructure",
    "resources:apim": "ts-node infrastructure/tasks/20-apim.ts",
    "resources:apim:logger": "ts-node infrastructure/tasks/21-apim_logger.ts",
    "resources:apim:api": "ts-node infrastructure/tasks/25-apim_api.ts",
    "resources:functions": "ts-node infrastructure/tasks/10-functions.ts",
    "resources:functions:sync":
      "ts-node infrastructure/tasks/15-functions_sync.ts",
    "resources:cosmosdb": "ts-node infrastructure/tasks/00-cosmosdb.ts",
    "resources:deploy":
      "cross-env NPMDEPLOY=1 npm-run-all resources:tf-init resources:tf-apply resources:cosmosdb resources:functions resources:apim resources:apim:api"
  },
  "devDependencies": {
    "@types/documentdb": "^1.10.2",
    "@types/node": "^6.0.0",
    "@types/readline-sync": "^1.4.2",
    "@types/request": "^2.0.3",
    "@types/shelljs": "^0.7.4",
    "@types/tmp": "^0.0.33",
    "azure-arm-apimanagement": "^1.0.0-preview",
    "azure-arm-appinsights": "^1.0.0-preview",
    "azure-arm-cosmosdb": "^1.0.0-preview",
    "azure-arm-storage": "^3.1.0",
    "azure-arm-website": "^2.0.0-preview",
    "azure-cli": "^0.10.16",
    "azure-storage": "^2.5.0",
    "cross-var": "^1.1.0",
    "documentdb": "^1.12.2",
    "dotenv": "^4.0.0",
    "gh-pages": "^1.0.0",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.7.0",
    "readline-sync": "^1.4.7",
    "request": "^2.83.0",
    "shelljs": "^0.7.8",
    "tmp": "^0.0.33",
    "ts-option": "^1.1.4",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-immutable": "^4.1.0",
    "tslint-plugin-prettier": "^1.2.0",
    "typescript": "^2.5.2",
    "azure-arm-eventhub": "^1.1.0-preview"
  }
}
